@model Events.Web.Models.CommentViewModel

@{
    ViewBag.Title = "Create";
}

@using (Ajax.BeginForm("Create", "Comments", new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.InsertAfter,
    UpdateTargetId = "new-comments-for-event-" + Model.EventId
})) 
{  
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.TextBoxFor(model => model.EventId, new {@class = "form-control", @type = "hidden"})
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

