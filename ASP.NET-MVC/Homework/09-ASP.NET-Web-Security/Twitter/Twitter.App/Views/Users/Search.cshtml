@model IQueryable<Twitter.App.Models.ViewModels.UserSearchViewModel>

<div class="jumbotron">
    <h1>Twitter</h1>
</div>

@if (@Model != null)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Search Results</h3>
        </div>
        <div class="panel-body">
            @foreach (var user in @Model)
            {
                <div class="col-lg-1">
                    <a href="/@user.Username">
                        <img class="img-circle tweet-profile-image" src="@user.ProfileImage"/>
                        <p>@user.Username</p>
                    </a>
                </div>
            }
        </div>
        <div class="panel-footer" style="text-align: right"></div>
    </div>
}
