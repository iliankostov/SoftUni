@{
    ViewBag.Title = "Towns";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-lg-12">
        <input type="text" data-autocomplete-url="@Url.Action("Search")" class="form-control" placeholder="Search town ..."/>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            $('*[data-autocomplete-url]')
                .each(function() {
                    $(this).autocomplete({
                        source: $(this).data("autocomplete-url")
                    });
                });
        });
    </script>
}